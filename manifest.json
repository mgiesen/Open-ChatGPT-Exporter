{
	"manifest_version": 3,
	"name": "Open ChatGPT Exporter",
	"version": "1.0",
	"description": "Exportiert deine ChatGPT Konversationen f√ºr eine Offline-Speicherung. 100% lokal und sicher.",
	"permissions": ["activeTab", "scripting"],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/inactive/icon16.png",
			"24": "icons/inactive/icon24.png",
			"32": "icons/inactive/icon32.png",
			"48": "icons/inactive/icon48.png",
			"64": "icons/inactive/icon64.png",
			"128": "icons/inactive/icon128.png"
		}
	},
	"icons": {
		"16": "icons/active/icon16.png",
		"24": "icons/active/icon24.png",
		"32": "icons/active/icon32.png",
		"48": "icons/active/icon48.png",
		"64": "icons/active/icon64.png",
		"128": "icons/active/icon128.png"
	}
}
